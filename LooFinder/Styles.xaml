<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LooFinder">

    <Style x:Key="ToiletCellHeading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Margin" Value="0,10,0,2"></Setter>
    </Style>

    <Style x:Key="ToiletCellDistance" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Foreground" Value="DarkGray"></Setter>
    </Style>

    <Style x:Key="ToiletCellAddress" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Margin" Value="0,2,0,10"></Setter>
    </Style>


</ResourceDictionary>
